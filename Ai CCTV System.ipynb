   "source": [
    "import cv2\n",
    "import numpy as np\n",
    "import time\n",
    "from tensorflow.keras.models import load_model\n",
    "import RPi.GPIO as GPIO\n",
    "\n",
    "# GPIO 핀 번호 설정\n",
    "red_pin = 17  # 빨간색 LED에 연결된 GPIO 핀 번호\n",
    "green_pin = 18  # 초록색 LED에 연결된 GPIO 핀 번호\n",
    "blue_pin = 27  # 파란색 LED에 연결된 GPIO 핀 번호\n",
    "trig_pin = 23\n",
    "echo_pin = 24\n",
    "in1_pin = 19\n",
    "in2_pin = 20\n",
    "in3_pin = 21\n",
    "in4_pin = 22\n",
    "ena_pin = 5\n",
    "enb_pin = 6\n",
    "\n",
    "# GPIO 핀 모드 설정\n",
    "GPIO.setmode(GPIO.BCM)\n",
    "GPIO.setwarnings(False)\n",
    "\n",
    "# GPIO 핀 설정\n",
    "GPIO.setup(red_pin, GPIO.OUT)\n",
    "GPIO.setup(green_pin, GPIO.OUT)\n",
    "GPIO.setup(blue_pin, GPIO.OUT)\n",
    "GPIO.setup(trig_pin, GPIO.OUT)\n",
    "GPIO.setup(echo_pin, GPIO.IN)\n",
    "GPIO.setup(in1_pin, GPIO.OUT)\n",
    "GPIO.setup(in2_pin, GPIO.OUT)\n",
    "GPIO.setup(in3_pin, GPIO.OUT)\n",
    "GPIO.setup(in4_pin, GPIO.OUT)\n",
    "GPIO.setup(ena_pin, GPIO.OUT)\n",
    "GPIO.setup(enb_pin, GPIO.OUT)\n",
    "\n",
    "# LED 상태 제어 함수\n",
    "def set_led_color(red, green, blue):\n",
    "    GPIO.output(red_pin, red)\n",
    "    GPIO.output(green_pin, green)\n",
    "    GPIO.output(blue_pin, blue)\n",
    "\n",
    "# 예측 결과에 따라 LED 색상 설정\n",
    "def set_led_color_by_result(result):\n",
    "    if result == 'fire':\n",
    "        set_led_color(1, 0, 0)  # 빨간색 LED 켜기\n",
    "    elif result == 'human':\n",
    "        set_led_color(0, 1, 0)  # 초록색 LED 켜기\n",
    "    elif result == 'water':\n",
    "        set_led_color(0, 0, 1)  # 파란색 LED 켜기\n",
    "    else:\n",
    "        set_led_color(1, 1, 1)  # 모든 LED 켜기\n",
    "\n",
    "# 모델 로드\n",
    "model_save_path = '/home/jemin/Downloads/model_trained_data.h5'\n",
    "model = load_model(model_save_path)\n",
    "\n",
    "# 모터 제어 함수\n",
    "def control_motor(in1_state, in2_state, in3_state, in4_state, ena_duty_cycle, enb_duty_cycle):\n",
    "    GPIO.output(in1_pin, in1_state)\n",
    "    GPIO.output(in2_pin, in2_state)\n",
    "    GPIO.output(in3_pin, in3_state)\n",
    "    GPIO.output(in4_pin, in4_state)\n",
    "    GPIO.output(ena_pin, GPIO.HIGH)\n",
    "    GPIO.output(enb_pin, GPIO.HIGH)\n",
    "\n",
    "    pwm_ena.ChangeDutyCycle(ena_duty_cycle)\n",
    "    pwm_enb.ChangeDutyCycle(enb_duty_cycle)\n",
    "\n",
    "pwm_frequency = 1000\n",
    "pwm_ena = GPIO.PWM(ena_pin, pwm_frequency)\n",
    "pwm_enb = GPIO.PWM(enb_pin, pwm_frequency)\n",
    "\n",
    "pwm_ena.start(0)\n",
    "pwm_enb.start(0)\n",
    "   \n",
    "# 초음파 센서 함수\n",
    "def measure_distance():\n",
    "    # 초음파 발신 시간 초기화\n",
    "    GPIO.output(trig_pin, GPIO.LOW)\n",
    "    time.sleep(0.5)\n",
    "    GPIO.output(trig_pin, GPIO.HIGH)\n",
    "    time.sleep(0.00001)\n",
    "    GPIO.output(trig_pin, GPIO.LOW)\n",
    "\n",
    "    # 초음파 수신 시간 측정\n",
    "    while GPIO.input(echo_pin) == 0:\n",
    "        pulse_start = time.time()\n",
    "    while GPIO.input(echo_pin) == 1:\n",
    "        pulse_end = time.time()\n",
    "\n",
    "    # 거리 계산\n",
    "    pulse_duration = pulse_end - pulse_start\n",
    "    distance = pulse_duration * 17150\n",
    "    distance = round(distance, 2)\n",
    "\n",
    "    return distance\n",
    "\n",
    "# 웹캠 열기\n",
    "cap = cv2.VideoCapture(0)\n",
    "\n",
    "while True:\n",
    "    # 웹캠에서 프레임 읽기\n",
    "    ret, frame = cap.read()\n",
    "\n",
    "    if ret:\n",
    "        # 프레임 전처리\n",
    "        gray = cv2.cvtColor(frame, cv2.COLOR_BGR2GRAY)\n",
    "        gray = cv2.equalizeHist(gray)\n",
    "        gray = cv2.resize(gray, (128, 128))\n",
    "        gray = gray / 255.0\n",
    "        input_img = gray.reshape(1, 128, 128, 1)\n",
    "\n",
    "        # 예측 결과 가져오기\n",
    "        prediction = model.predict(input_img)\n",
    "        probability = np.amax(prediction)\n",
    "        class_index = np.argmax(prediction)\n",
    "\n",
    "        # 예측 결과 텍스트 생성\n",
    "        if class_index == 0:\n",
    "            label = 'fire'\n",
    "        elif class_index == 1:\n",
    "            label = 'human'\n",
    "        elif class_index == 2:\n",
    "            label = 'water'\n",
    "        else:\n",
    "            continue  # 다른 클래스에 대해서는 텍스트 출력을 건너뛰기\n",
    "\n",
    "        # 확률이 85% 이상인 경우에만 텍스트 출력\n",
    "        if probability >= 0.95:\n",
    "            text = f'{label} ({probability * 100:.2f}%)'\n",
    "            cv2.putText(frame, text, (10, 30), cv2.FONT_HERSHEY_SIMPLEX, 0.8, (0, 255, 0), 2)\n",
    "        else:\n",
    "            text = 'Low probability'\n",
    "            cv2.putText(frame, text, (10, 30), cv2.FONT_HERSHEY_SIMPLEX, 0.8, (0, 0, 255), 2)\n",
    "\n",
    "        # 예측 결과에 따라 LED 색상 설정\n",
    "        if probability >= 0.95:\n",
    "            set_led_color_by_result(label)\n",
    "        else:\n",
    "            set_led_color_by_result('')\n",
    "\n",
    "        # 웹캠 영상 출력\n",
    "        cv2.imshow('Webcam', frame)\n",
    "\n",
    "        # 초음파 센서로 거리 측정\n",
    "        distance = measure_distance()\n",
    "        print(\"Distance:\", distance, \"cm\")\n",
    "\n",
    "        # 거리에 따라 모터 제어\n",
    "        if probability >= 0.95:\n",
    "            set_led_color_by_result(label)\n",
    "            if distance >= 15:\n",
    "                control_motor(GPIO.LOW, GPIO.LOW, GPIO.LOW, GPIO.LOW, 60, 60)\n",
    "                time.sleep(10)\n",
    "                control_motor(GPIO.HIGH, GPIO.LOW, GPIO.HIGH, GPIO.LOW, 60, 60)\n",
    "            else:\n",
    "                control_motor(GPIO.LOW, GPIO.HIGH, GPIO.HIGH, GPIO.LOW, 0, 95)  \n",
    "        else:\n",
    "            if distance >= 15:\n",
    "                control_motor(GPIO.HIGH, GPIO.LOW, GPIO.HIGH, GPIO.LOW, 60, 60)  ,
    "            else:\n",
    "                control_motor(GPIO.LOW, GPIO.HIGH, GPIO.HIGH, GPIO.LOW, 0, 95) ,
    "    else:\n",
    "        break\n",
    "    # 'q' 키를 누르면 종료\n",
    "    if cv2.waitKey(1) & 0xFF == ord('q'):\n",
    "        break\n",
    "\n",
    "# 리소스 해제\n",
    "cap.release()\n",
    "cv2.destroyAllWindows()\n",
    "\n",
    "# GPIO 설정 해제\n",
    "GPIO.cleanup()"
   ]
  }
 ],
